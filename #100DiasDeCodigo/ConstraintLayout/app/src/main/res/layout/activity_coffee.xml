<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoffeeActivity">

    <View
        android:id="@+id/view_background"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_arrow_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/arrow_left"
        android:contentDescription="Drawing of an arrow pointing to the left"
        app:tint="@color/white"
        android:layout_margin="16dp" />
    
    <TextView
        android:id="@+id/textview_cappuccino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:text="Cappuccino"
        app:layout_constraintTop_toTopOf="@id/view_background"
        app:layout_constraintBottom_toBottomOf="@id/view_background"
        app:layout_constraintStart_toStartOf="@id/view_background"
        app:layout_constraintEnd_toEndOf="@id/view_background" />

    <ImageView
        android:id="@+id/imageview_clock"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_background"
        app:layout_constraintEnd_toStartOf="@id/imageview_heart"
        android:src="@drawable/ic_clock"
        android:contentDescription="Drawing of a clock"
        app:tint="@color/brown"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/imageview_heart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@id/imageview_clock"
        app:layout_constraintTop_toBottomOf="@id/view_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_favorite"
        android:contentDescription="Drawing of a heart"
        app:tint="@color/brown"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textview_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageview_clock"
        app:layout_constraintStart_toStartOf="@id/imageview_clock"
        app:layout_constraintEnd_toEndOf="@id/imageview_clock"
        android:text="15 minutos"
        android:textColor="@color/brown"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/textview_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageview_heart"
        app:layout_constraintStart_toStartOf="@id/imageview_heart"
        app:layout_constraintEnd_toEndOf="@id/imageview_heart"
        android:text="54214"
        android:textColor="@color/brown"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/view_fineline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/textview_likes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/brown"/>

    <TextView
        android:id="@+id/textview_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/brown"
        android:textSize="16sp"
        android:padding="16dp"
        android:gravity="center"
        android:text="Uma simples e perfeitamente extraída dose de espresso misturado com leite fresco e chocolate fazem esta bebida deliciosa."
        app:layout_constraintTop_toBottomOf="@id/view_fineline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textview_ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textview_description"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp"
        android:textSize="26sp"
        android:text="Ingredientes"
        android:textColor="@color/brown"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageview_arrow_forward1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward"
        android:contentDescription="Drawing of an arrow pointing forward"
        app:tint="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/textview_ingredientes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textview_lista1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 dose espresso"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/imageview_arrow_forward1"
        app:layout_constraintStart_toEndOf="@id/imageview_arrow_forward1"
        app:layout_constraintBottom_toBottomOf="@id/imageview_arrow_forward1"
        android:layout_marginStart="5dp" />

    <ImageView
        android:id="@+id/imageview_arrow_forward2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward"
        android:contentDescription="Drawing of an arrow pointing forward"
        app:tint="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/imageview_arrow_forward1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textview_lista2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100ml leite"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/imageview_arrow_forward2"
        app:layout_constraintStart_toEndOf="@id/imageview_arrow_forward2"
        app:layout_constraintBottom_toBottomOf="@id/imageview_arrow_forward2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:id="@+id/imageview_arrow_forward3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward"
        android:contentDescription="Drawing of an arrow pointing forward"
        app:tint="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/imageview_arrow_forward2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textview_lista3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 colher de chocolate em pó"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/imageview_arrow_forward3"
        app:layout_constraintStart_toEndOf="@id/imageview_arrow_forward3"
        app:layout_constraintBottom_toBottomOf="@id/imageview_arrow_forward3"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>