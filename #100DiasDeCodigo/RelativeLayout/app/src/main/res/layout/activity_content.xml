<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContentActivity">

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_entrada" />

    <TextView
        android:id="@+id/textview_learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O que vamos aprender hoje?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/textview_name"
        android:layout_marginTop="16dp"/>

    <View
        android:id="@+id/view_center"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/image_development"
        android:src="@drawable/image_development"
        android:contentDescription="Desenvolvimento"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_toStartOf="@+id/view_center"
        android:layout_below="@id/textview_learn"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/image_design"
        android:src="@drawable/image_design"
        android:contentDescription="Design"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_toEndOf="@+id/view_center"
        android:layout_below="@id/textview_learn"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/image_ai"
        android:src="@drawable/image_ai"
        android:contentDescription="Artificial Inteligence"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_toStartOf="@+id/view_center"
        android:layout_below="@id/image_development"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/image_explore"
        android:src="@drawable/image_explore"
        android:contentDescription="Explore"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_toEndOf="@+id/view_center"
        android:layout_below="@id/image_design"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textview_popular_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_ai"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"
        android:text="Cursos Populares" />

    <TextView
        android:id="@+id/textview_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_ai"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:text="Ver todos" />

    <View
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/gradient"
        android:layout_below="@id/textview_popular_courses"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textview_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_background"
        android:layout_alignBottom="@id/view_background"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:text="Desenvolvimento Android" />

    <ImageView
        android:id="@+id/image_android"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/view_background"
        android:layout_alignBottom="@id/view_background"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_android"
        app:tint="@color/white"/>
</RelativeLayout>