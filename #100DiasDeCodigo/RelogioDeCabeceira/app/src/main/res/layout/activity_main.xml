<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
    android:id="@+id/textview_hour_minute"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="120sp"
    android:textColor="@color/blue"
    android:text="15:40"
    android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textview_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:textColor="@color/blue"
        android:text="23"
        android:layout_toEndOf="@id/textview_hour_minute"
        android:layout_alignBaseline="@id/textview_hour_minute"
        android:layout_marginStart="8dp"/>
    
    <ImageView
        android:id="@+id/imageview_settings"
        android:contentDescription="Configurações"
        android:layout_marginEnd="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_build_circle"
        app:tint="@color/white"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/imageview_close"
        android:contentDescription="Fechar configurações"
        android:layout_marginEnd="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_close"
        app:tint="@color/white"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <TextView
        android:id="@+id/textview_battery_level"
        android:layout_marginStart="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="85%"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/checkbox_battery_level"
        android:layout_marginStart="32dp"
        android:text="Nível de bateria"
        android:textColor="@color/grey"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>